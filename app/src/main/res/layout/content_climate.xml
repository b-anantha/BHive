<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_climate"
        tools:context=".ClimateActivity">
    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartClimate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0">
    </com.github.mikephil.charting.charts.LineChart>
    <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_hours" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="@+id/chartClimate" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/climate_hours"
            android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>